<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Popover
    id="legendPopover"
    title="Legend"
    placement="Bottom"
    showHeader="true"
  >
    <VBox class="sapUiSmallMargin">
      <HBox alignItems="Center" class="sapUiTinyMarginBottom">
        <Text class="legendSquare legendBlue" />
        <Text text="In Process" />
      </HBox>
      <HBox alignItems="Center" class="sapUiTinyMarginBottom">
        <Text class="legendSquare legendOrange" />
        <Text text="Sent for Approval" />
      </HBox>
      <HBox alignItems="Center" class="sapUiTinyMarginBottom">
        <Text class="legendSquare legendGreen" />
        <Text text="Approved" />
      </HBox>
      <HBox alignItems="Center">
        <Text class="legendSquare legendRed" />
        <Text text="Rejected" />
      </HBox>
    </VBox>
  </Popover>
</core:FragmentDefinition>
